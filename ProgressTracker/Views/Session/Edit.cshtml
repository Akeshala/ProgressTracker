@model ProgressTracker.ViewModels.Session.SessionViewModel;

@{
ViewData["Title"] = "Edit Session";
}

<h1>@ViewData["Title"]</h1>

<h4>Edit Study Session from here</h4>

<form method="post" class="mt-4">
    <div class="form-group row mb-3">
        <label for="dropdown" class="col-sm-2 col-form-label">Select a subject</label>
        <div class="col-sm-2">
            <select asp-for="SubjectSelectedValue" asp-items="Model.SubjectOptions" class="form-control" required>
                <option value="@Model.SubjectSelectedValue">-- Please Select --</option>
            </select>
        </div>
    </div>
    
    <div class="form-group row mb-3">
        <label for="hours" class="col-sm-2 col-form-label">Hours:</label>
        <div class="col-sm-2">
            <input type="number" id="hours" name="hours" min="0" max="24" class="form-control" value="@Model.Hours" required>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="minutes" class="col-sm-2 col-form-label">Minutes:</label>
        <div class="col-sm-2">
            <input type="number" id="minutes" name="minutes" min="0" max="59" class="form-control" value="@Model.Minutes" required>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-1">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-2">
            <div>
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</form>

<style>
    h1 {
        margin-top: 20px;
        margin-bottom: 20px;
    }
    h4 {
        margin-bottom: 20px;
    }
    form {
        margin-top: 20px;
    }
    .form-group {
        margin-bottom: 20px;
    }
</style>
