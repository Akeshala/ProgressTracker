@model ProgressTracker.ViewModels.DailyRecord.EditDailyRecordViewModel;

@{
    ViewData["Title"] = "Edit Daily Study Record";
}

<h1>@ViewData["Title"]</h1>
<hr/>

<form method="post" class="mt-4">
    <div class="form-group row mb-3">
        <label for="dailyTarget" class="col-sm-2 col-form-label">Daily Target:</label>
        <div class="col-sm-2">
            <div class="input-group">
                <input type="text" id="dailyTarget" class="form-control" value="@Model.DailyTarget" readonly>
                <span class="input-group-text col" style="flex: 0 0 40%;">hours</span>
            </div>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="covered" class="col-sm-2 col-form-label">Covered:</label>
        <div class="col-sm-2">
            <div class="input-group">
                <input type="text" id="covered" class="form-control" value="@Model.Covered" readonly>
                <span class="input-group-text col" style="flex: 0 0 40%;">hours</span>
            </div>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Date:</label>
        <div class="col-sm-2">
            <div class="input-group">
                <input type="number" id="year" name="year" min="2024" max="9999" class="form-control" value="@Model.Year" required>
                <span class="input-group-text col" style="flex: 0 0 40%;">year</span>
            </div>
        </div>

        <div class="col-sm-2">
            <div class="input-group">
                <input type="number" id="month" name="month" min="1" max="12" class="form-control" value="@Model.Month" required>
                <span class="input-group-text col" style="flex: 0 0 40%;">month</span>
            </div>
        </div>

        <div class="col-sm-2">
            <div class="input-group">
                <input type="number" id="day" name="day" min="1" max="31" class="form-control" value="@Model.Day" required>
                <span class="input-group-text col" style="flex: 0 0 40%;">day</span>
            </div>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Break:</label>
        <div class="col-sm-2">
            <div class="input-group">
                <input type="number" id="breakHours" name="breakHours" min="0" max="24" class="form-control" value="@Model.BreakHours">
                <span class="input-group-text col" style="flex: 0 0 40%;">hours</span>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="input-group">
                <input type="number" id="breakMinutes" name="breakMinutes" min="0" max="59" class="form-control" value="@Model.BreakMinutes">
                <span class="input-group-text col" style="flex: 0 0 40%;">mins</span>
            </div>
        </div>
    </div>

    <p>
        <strong>Add a session</strong>
    </p>
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Select a subject:</label>
        <div class="col-sm-2">
            <select asp-for="SubjectSelectedValue" asp-items="Model.SubjectOptions" class="form-control">
                <option value="">-- Please Select --</option>
            </select>
        </div>

        <div class="col-sm-2">
            <div class="input-group">
                <input type="number" id="subjectHours" name="subjectHours" min="0" max="24" class="form-control">
                <span class="input-group-text col" style="flex: 0 0 40%;">hours</span>
            </div>
        </div>

        <div class="col-sm-2">
            <div class="input-group">
                <input type="number" id="subjectMinutes" name="subjectMinutes" min="0" max="59" class="form-control">
                <span class="input-group-text col" style="flex: 0 0 40%;">mins</span>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-1">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-2">
            <div>
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</form>

<h4 class="mt-3">Study Sessions for @Model.Year-@Model.Month-@Model.Day</h4>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sessions[0].Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sessions[0].SubjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sessions[0].Time)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Sessions) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            <a asp-controller="Session" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
        </td>
    </tr>
    }
    </tbody>
</table>

<style>
    h1 {
        margin-top: 20px;
        margin-bottom: 20px;
    }
    h4 {
        margin-bottom: 20px;
    }
    form {
        margin-top: 20px;
    }
    .form-group {
        margin-bottom: 20px;
    }
</style>