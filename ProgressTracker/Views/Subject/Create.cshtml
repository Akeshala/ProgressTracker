@model ProgressTracker.ViewModels.Subject.SubjectViewModel

@{
ViewData["Title"] = "Create a Subject";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mt-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <label asp-for="Credits" class="control-label"></label>
                <input asp-for="Credits" class="form-control" required/>
                <span asp-validation-for="Credits" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 row">
                <div class="col-auto">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-link">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
